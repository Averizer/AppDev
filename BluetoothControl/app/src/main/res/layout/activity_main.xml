<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/principal">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:textOff="CONECTAR"
        android:textOn="DESCONECTAR"
        android:textSize="14dp"
        android:width="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:checked="false"
        android:background="#ffff811f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONTROL POR BLUETOOTH"
        android:id="@+id/textView"
        android:width="300dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENCENDIDO/APAGADO DE CIRCUITOS"
        android:id="@+id/textView2"
        android:width="400dp"
        android:layout_below="@+id/toggleButton"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:singleLine="true"
        android:textOff="APAGADO"
        android:textOn="ENCENDIDO"
        android:width="200dp"
        android:background="#fff0ff31"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton3"
        android:singleLine="true"
        android:textOff="APAGADO"
        android:textOn="ENCENDIDO"
        android:width="200dp"
        android:textColor="#ff000000"
        android:background="#fff0ff31"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton4"
        android:singleLine="true"
        android:textOff="APAGADO"
        android:textOn="ENCENDIDO"
        android:width="200dp"
        android:background="#fff0ff31"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CIRCUITO SALÓN"
        android:id="@+id/textView3"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignLeft="@+id/toggleButton2"
        android:layout_alignStart="@+id/toggleButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CIRCUITO PASILLO"
        android:id="@+id/textView4"
        android:layout_below="@+id/toggleButton3"
        android:layout_alignRight="@+id/toggleButton3"
        android:layout_alignEnd="@+id/toggleButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CIRCUITO HABITACIÓN"
        android:id="@+id/textView5"
        android:layout_below="@+id/toggleButton4"
        android:layout_alignLeft="@+id/toggleButton3"
        android:layout_alignStart="@+id/toggleButton3" />
</RelativeLayout>
